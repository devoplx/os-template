{
    "github": {
        "release": true
    },
    "git": {
        "requireBranch": "master",
        "commitMessage": "chore: release v${version}"
    },
    "hooks": {
        "before:init": [
            "git pull",
            "npm run eslint",
            "npm run prettier",
            "npm run build"
        ],
        "after:bump": "npx auto-changelog -p"
    },
    "npm": {
        "publish": true
    }
}
