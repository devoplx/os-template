{
    "github": {
        "release": true
    },
    "git": {
        "requireBranch": "master",
        "commitMessage": "chore: release v${version}"
    },
    "hooks": {
        "before:init": ["git pull", "npm run eslint", "npm run prettier"],
        "after:bump": "npx auto-changelog -p"
    },
    "npm": {
        "publish": true
    }
}
